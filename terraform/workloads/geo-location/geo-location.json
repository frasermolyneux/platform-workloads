                        "AcrPull"
                    ]
                },
                {
                    "type": "standard",
                    "scope": "/subscriptions/db34f572-8b71-40d6-8f99-f29a27612144/resourceGroups/rg-platform-dns-prd-uksouth-01/providers/Microsoft.Network/dnszones/geo-location.net",
                    "role_definitions": [
                        "DNS Zone Contributor"
                    ]
                },
                {
                    "type": "rbac_administrator",
