{
    "name": "platform-monitoring",
    "github": {
        "description": "Log Analytics plus resource and service health alerting for workloads hosted on and off Azure. Deployed using Terraform and GitHub Actions.",
        "topics": [
            "azure",
            "terraform",
            "github-actions",
            "azure-monitor",
            "log-analytics",
            "resource-health",
            "service-health"
        ],
        "visibility": "public",
        "add_sonarcloud_secrets": true
    },
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-visualstudio-enterprise",
            "devops_project": "Molyneux.IO",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "directory_roles": [
                "Cloud application administrator"
            ],
            "role_assignments": {
