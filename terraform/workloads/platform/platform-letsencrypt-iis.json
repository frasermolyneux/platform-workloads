{
    "name": "platform-letsencrypt-iis",
    "github": {
        "description": "Automation scripts for issuing, renewing, and binding Let's Encrypt certificates on IIS.",
        "topics": [
            "letsencrypt",
            "iis",
            "powershell",
            "certificate-automation",
            "github-actions"
        ],
        "visibility": "public"
    },
    "environments": [
        {
            "name": "Production",
            "subscription": "sub-platform-management",
            "connect_to_github": true,
            "cloudflare_tokens": [
                {
                    "name_suffix": "cert-rotation",
                    "policies": [
                        {
                            "permission_groups": [
                                "DNS Write",
                                "Zone Read"
                            ],
                            "zone": "xtremeidiots.com"
                        }
                    ]
                }
            ]
        }
    ]
}