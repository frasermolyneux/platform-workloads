{
    "name": "platform-dashboard",
    "github": {
        "description": "Development estate dashboard and governance portal. Shows build/deployment status, compliance monitoring, and governance rules across all workloads. Deployed as Azure Static Web App with GitHub Actions.",
        "topics": [
            "azure",
            "static-web-app",
            "github-actions",
            "github-app",
            "governance",
            "compliance",
            "dashboard",
            "react",
            "azure-functions"
        ],
        "visibility": "public",
        "add_sonarcloud_secrets": true
    },
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-visualstudio-enterprise",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-uksouth",
                    "role_assignments": [
                        {
                            "type": "standard",
                            "role_definitions": [
                                "Contributor"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "Production",
            "subscription": "sub-platform-management",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-uksouth",
                    "role_assignments": [
                        {
                            "type": "standard",
                            "role_definitions": [
                                "Contributor"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}