{
    "name": "xtremeidiots-portal",
    "github": {
        "description": "Part of XtremeIdiots Portal solution; legacy repository containing the web app. Deployed using Bicep and Azure DevOps pipelines.",
        "topics": [
            "azure",
            "bicep",
            "azure-devops-pipelines",
            "key-vault",
            "app-insights",
            "app-service",
            "function-app"
        ],
        "add_sonarcloud_secrets": true,
        "add_nuget_environment": true,
        "visibility": "public"
    },
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-visualstudio-enterprise",
            "devops_project": "XtremeIdiots",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "requires_terraform_state_access": [
                "platform-monitoring",
                "portal-core",
                "portal-environments"
            ],
            "locations": [
                "swedencentral"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor",
                                    "Key Vault Secrets Officer"
                                ]
                            }
                        ]
                    }
                }
            ],
            "directory_roles": [
                "Cloud application administrator",
                "Directory Writers"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer"
                        ]
                    },
                    {
                        "scope": "/subscriptions/903b6685-c12a-4703-ac54-7ec1ff15ca43/resourceGroups/rg-platform-acr-prd-uksouth-01/providers/Microsoft.ContainerRegistry/registries/acrty7og2i6qpv3s",
                        "roles": [
                            "AcrPull"
                        ]
                    },
                    {
                        "scope": "/subscriptions/db34f572-8b71-40d6-8f99-f29a27612144/resourceGroups/rg-platform-dns-prd-uksouth-01",
                        "roles": [
                            "DNS Zone Contributor"
                        ]
                    },
                    {
                        "scope": "workload:platform-monitoring/Development",
                        "roles": [
                            "Monitoring Reader"
                        ]
                    }
                ],
                "rbac_admin_roles": [
                    {
                        "allowed_roles": [
                            "Key Vault Secrets User"
                        ]
                    }
                ]
            }
        },
        {
            "name": "Production",
            "subscription": "sub-xi-portal-prd",
            "devops_project": "XtremeIdiots",
            "connect_to_github": true,
            "locations": [
                "uksouth"
            ],
            "configure_for_terraform": true,
            "requires_terraform_state_access": [
                "platform-monitoring",
                "portal-core",
                "portal-environments"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor",
                                    "Key Vault Secrets Officer"
                                ]
                            }
                        ]
                    }
                }
            ],
            "directory_roles": [
                "Cloud application administrator",
                "Directory Writers"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer"
                        ]
                    },
                    {
                        "scope": "/subscriptions/903b6685-c12a-4703-ac54-7ec1ff15ca43/resourceGroups/rg-platform-acr-prd-uksouth-01/providers/Microsoft.ContainerRegistry/registries/acrty7og2i6qpv3s",
                        "roles": [
                            "AcrPull"
                        ]
                    },
                    {
                        "scope": "/subscriptions/db34f572-8b71-40d6-8f99-f29a27612144/resourceGroups/rg-platform-dns-prd-uksouth-01",
                        "roles": [
                            "DNS Zone Contributor"
                        ]
                    },
                    {
                        "scope": "workload:platform-monitoring/Production",
                        "roles": [
                            "Monitoring Reader"
                        ]
                    }
                ],
                "rbac_admin_roles": [
                    {
                        "allowed_roles": [
                            "Key Vault Secrets User"
                        ]
                    }
                ]
            }
        }
    ]
}