{
    "name": "portal-repository-func",
    "github": {
        "description": "Background functions for the XtremeIdiots Repository API handling maintenance, telemetry, and subscription tasks, deployed with Terraform and GitHub Actions.",
        "topics": [
            "azure",
            "terraform",
            "github-actions",
            "azure-functions",
            "app-insights",
            "key-vault",
            "api-subscriptions"
        ],
        "labels": [
            "deploy-dev",
            "run-prd-plan"
        ],
        "add_sonarcloud_secrets": true,
        "visibility": "public"
    },
    "rulesets": [
        {
            "name": "main-protection",
            "target": "branch",
            "enforcement": "active",
            "includes": [
                "refs/heads/main"
            ],
            "excludes": [],
            "rules": {
                "required_status_checks": [
                    {
                        "context": "SonarCloud Code Analysis",
                        "integration_id": 12526
                    },
                    {
                        "context": "build-and-test",
                        "integration_id": 15368
                    },
                    {
                        "context": "quality / Code Quality",
                        "integration_id": 15368
                    },
                    {
                        "context": "devops-secure-scanning / DevOps Secure Scanning",
                        "integration_id": 15368
                    }
                ],
                "strict_required_status_checks_policy": true,
                "do_not_enforce_on_create": false,
                "pull_request": {
                    "allowed_merge_methods": [
                        "merge",
                        "rebase",
                        "squash"
                    ],
                    "required_approving_review_count": 0,
                    "dismiss_stale_reviews_on_push": true,
                    "require_code_owner_review": false,
                    "required_review_thread_resolution": true
                },
                "required_code_scanning": [
                    {
                        "tool": "CodeQL",
                        "alerts_threshold": "errors",
                        "security_alerts_threshold": "high_or_higher"
                    },
                    {
                        "tool": "SonarCloud",
                        "alerts_threshold": "errors",
                        "security_alerts_threshold": "high_or_higher"
                    }
                ],
                "copilot_code_review": {
                    "review_draft_pull_requests": true,
                    "review_on_push": true
                },
                "required_signatures": false,
                "required_linear_history": true,
                "non_fast_forward": true
            }
        }
    ],
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-visualstudio-enterprise",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "requires_terraform_state_access": [
                "platform-monitoring",
                "portal-core",
                "portal-environments"
            ],
            "locations": [
                "swedencentral"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor",
                                    "Key Vault Secrets Officer"
                                ]
                            }
                        ]
                    }
                }
            ],
            "directory_roles": [
                "Cloud application administrator"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer",
                            "Storage Blob Data Contributor"
                        ]
                    },
                    {
                        "scope": "workload:platform-monitoring/Development",
                        "roles": [
                            "Monitoring Reader"
                        ]
                    }
                ],
                "rbac_admin_roles": [
                    {
                        "allowed_roles": [
                            "Storage Blob Data Owner",
                            "Key Vault Secrets User"
                        ]
                    }
                ]
            }
        },
        {
            "name": "Production",
            "subscription": "sub-xi-portal-prd",
            "connect_to_github": true,
            "locations": [
                "uksouth"
            ],
            "configure_for_terraform": true,
            "requires_terraform_state_access": [
                "platform-monitoring",
                "portal-core",
                "portal-environments"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor",
                                    "Key Vault Secrets Officer"
                                ]
                            }
                        ]
                    }
                }
            ],
            "directory_roles": [
                "Cloud application administrator"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer",
                            "Storage Blob Data Contributor"
                        ]
                    },
                    {
                        "scope": "workload:platform-monitoring/Production",
                        "roles": [
                            "Monitoring Reader"
                        ]
                    }
                ],
                "rbac_admin_roles": [
                    {
                        "allowed_roles": [
                            "Storage Blob Data Owner",
                            "Key Vault Secrets User"
                        ]
                    }
                ]
            }
        }
    ]
}