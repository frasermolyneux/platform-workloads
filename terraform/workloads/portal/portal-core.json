{
    "name": "portal-core",
    "github": {
        "description": "Core platform for the XtremeIdiots portal (API Management, Service Bus, shared app plans, monitoring hooks) provisioned with Terraform.",
        "topics": [
            "azure",
            "terraform",
            "github-actions",
            "api-management",
            "service-bus",
            "app-service-plan",
            "observability",
            "key-vault"
        ],
        "add_sonarcloud_secrets": false,
        "add_nuget_environment": false,
        "visibility": "public",
        "rulesets": [
            {
                "name": "main-protection",
                "target": "branch",
                "enforcement": "active",
                "includes": [
                    "refs/heads/main"
                ],
                "excludes": [],
                "bypass_actors": [
                    {
                        "bypass_mode": "always",
                        "actor_id": 5,
                        "actor_type": "RepositoryRole"
                    }
                ],
                "rules": {
                    "required_status_checks": [
                        {
                            "context": "terraform-plan-dev",
                            "integration_id": 15368
                        },
                        {
                            "context": "devops-secure-scanning / DevOps Secure Scanning",
                            "integration_id": 15368
                        }
                    ],
                    "strict_required_status_checks_policy": true,
                    "do_not_enforce_on_create": false,
                    "pull_request": {
                        "allowed_merge_methods": [
                            "merge",
                            "rebase",
                            "squash"
                        ],
                        "required_approving_review_count": 0,
                        "dismiss_stale_reviews_on_push": true,
                        "require_code_owner_review": false,
                        "required_review_thread_resolution": true
                    },
                    "required_code_scanning": [],
                    "copilot_code_review": {
                        "review_draft_pull_requests": true,
                        "review_on_push": true
                    },
                    "required_signatures": false,
                    "required_linear_history": true,
                    "non_fast_forward": true
                }
            }
        ],
        "labels": [
            {
                "name": "deploy-dev",
                "description": "Run dev Terraform plan+apply and deploy the app",
                "color": "0E8A16"
            },
            {
                "name": "run-prd-plan",
                "description": "Run prd Terraform plan",
                "color": "5319E7"
            }
        ]
    },
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-visualstudio-enterprise",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "requires_terraform_state_access": [
                "platform-monitoring",
                "portal-environments"
            ],
            "locations": [
                "swedencentral"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor",
                                    "Key Vault Secrets Officer"
                                ]
                            }
                        ],
                        "rbac_admin_roles": [
                            {
                                "allowed_roles": [
                                    "Key Vault Secrets Officer",
                                    "Key Vault Secrets User",
                                    "Storage Blob Data Owner",
                                    "Azure Service Bus Data Receiver",
                                    "Azure Service Bus Data Sender"
                                ]
                            }
                        ]
                    }
                }
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer"
                        ]
                    },
                    {
                        "scope": "workload:platform-monitoring/Development",
                        "roles": [
                            "Monitoring Reader"
                        ]
                    }
                ],
                "rbac_admin_roles": [
                    {
                        "allowed_roles": [
                            "Key Vault Secrets Officer",
                            "Key Vault Secrets User",
                            "Storage Blob Data Owner",
                            "Azure Service Bus Data Receiver",
                            "Azure Service Bus Data Sender"
                        ]
                    }
                ]
            }
        },
        {
            "name": "Production",
            "subscription": "sub-xi-portal-prd",
            "connect_to_github": true,
            "locations": [
                "uksouth"
            ],
            "configure_for_terraform": true,
            "plan_additional_subscriptions": [
                "sub-platform-management"
            ],
            "requires_terraform_state_access": [
                "platform-monitoring",
                "portal-environments"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor",
                                    "Key Vault Secrets Officer"
                                ]
                            }
                        ],
                        "rbac_admin_roles": [
                            {
                                "allowed_roles": [
                                    "Key Vault Secrets Officer",
                                    "Key Vault Secrets User",
                                    "Storage Blob Data Owner",
                                    "Azure Service Bus Data Receiver",
                                    "Azure Service Bus Data Sender"
                                ]
                            }
                        ]
                    }
                }
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer"
                        ]
                    },
                    {
                        "scope": "workload:platform-monitoring/Production",
                        "roles": [
                            "Monitoring Reader"
                        ]
                    }
                ],
                "rbac_admin_roles": [
                    {
                        "allowed_roles": [
                            "Key Vault Secrets Officer",
                            "Key Vault Secrets User",
                            "Storage Blob Data Owner",
                            "Azure Service Bus Data Receiver",
                            "Azure Service Bus Data Sender"
                        ]
                    }
                ]
            }
        }
    ]
}
