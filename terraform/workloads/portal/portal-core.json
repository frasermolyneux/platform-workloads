{
    "name": "portal-core",
    "github": {
        "description": "Part of XtremeIdiots Portal solution; creates the application platform. Deployed using Terraform and GitHub Actions.",
        "topics": [
            "azure",
            "terraform",
            "github-actions",
            "api-management",
            "app-insights",
            "service-bus",
            "app-service-plan"
        ],
        "add_sonarcloud_secrets": true,
        "add_nuget_environment": false,
        "visibility": "public"
    },
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-visualstudio-enterprise",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "requires_terraform_state_access": [
                "portal-environments"
            ],
            "role_assignments": [
                {
                    "scope": "sub-visualstudio-enterprise",
                    "role_definitions": [
                        "Key Vault Secrets Officer"
                    ]
                }
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": [
                        "Contributor",
                        "Key Vault Secrets Officer"
                    ]
                }
            ],
            "rbac_administrator": [
                "Key Vault Secrets Officer"
            ]
        },
        {
            "name": "Production",
            "subscription": "sub-xi-portal-prd",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "requires_terraform_state_access": [
                "portal-environments"
            ],
            "role_assignments": [
                {
                    "scope": "sub-xi-portal-prd",
                    "role_definitions": [
                        "Key Vault Secrets Officer"
                    ]
                }
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": [
                        "Contributor",
                        "Key Vault Secrets Officer"
                    ]
                }
            ],
            "rbac_administrator": [
                "Key Vault Secrets Officer"
            ]
        }
    ]
}