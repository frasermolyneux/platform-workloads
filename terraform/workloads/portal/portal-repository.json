{
    "name": "portal-repository",
    "github": {
        "description": "XtremeIdiots Repository API and data platform for player and server data backed by SQL, App Service, and API Management.",
        "topics": [
            "azure",
            "terraform",
            "github-actions",
            "sql-database",
            "app-service",
            "api-management",
            "key-vault",
            "app-insights",
            "aad-groups"
        ],
        "add_sonarcloud_secrets": true,
        "add_nuget_environment": true,
        "visibility": "public",
        "rulesets": [
            {
                "name": "main-protection",
                "target": "branch",
                "enforcement": "active",
                "includes": [
                    "refs/heads/main"
                ],
                "excludes": [],
                "bypass_actors": [
                    {
                        "bypass_mode": "always",
                        "actor_id": 5,
                        "actor_type": "RepositoryRole"
                    }
                ],
                "rules": {
                    "required_status_checks": [
                        {
                            "context": "SonarCloud Code Analysis",
                            "integration_id": 12526
                        },
                        {
                            "context": "build-and-test",
                            "integration_id": 15368
                        },
                        {
                            "context": "quality / Code Quality",
                            "integration_id": 15368
                        },
                        {
                            "context": "devops-secure-scanning / DevOps Secure Scanning",
                            "integration_id": 15368
                        }
                    ],
                    "strict_required_status_checks_policy": true,
                    "do_not_enforce_on_create": false,
                    "pull_request": {
                        "allowed_merge_methods": [
                            "merge",
                            "rebase",
                            "squash"
                        ],
                        "required_approving_review_count": 0,
                        "dismiss_stale_reviews_on_push": true,
                        "require_code_owner_review": false,
                        "required_review_thread_resolution": true
                    },
                    "required_code_scanning": [
                        {
                            "tool": "CodeQL",
                            "alerts_threshold": "errors",
                            "security_alerts_threshold": "high_or_higher"
                        },
                        {
                            "tool": "SonarCloud",
                            "alerts_threshold": "errors",
                            "security_alerts_threshold": "high_or_higher"
                        }
                    ],
                    "copilot_code_review": {
                        "review_draft_pull_requests": true,
                        "review_on_push": true
                    },
                    "required_signatures": false,
                    "required_linear_history": true,
                    "non_fast_forward": true
                }
            }
        ],
        "labels": [
            {
                "name": "deploy-dev",
                "description": "Run dev Terraform plan+apply and deploy the app",
                "color": "0E8A16"
            },
            {
                "name": "run-prd-plan",
                "description": "Run prd Terraform plan",
                "color": "5319E7"
            }
        ]
    },
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-visualstudio-enterprise",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "plan_additional_subscriptions": [
                "sub-platform-connectivity"
            ],
            "requires_terraform_state_access": [
                "platform-monitoring",
                "portal-core",
                "portal-environments"
            ],
            "locations": [
                "swedencentral"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor"
                                ]
                            }
                        ],
                        "rbac_admin_roles": [
                            {
                                "allowed_roles": [
                                    "Storage Blob Data Owner"
                                ]
                            }
                        ]
                    }
                }
            ],
            "directory_roles": [
                "Cloud application administrator",
                "Groups Administrator"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Reader"
                        ]
                    },
                    {
                        "scope": "workload:portal-core/Development",
                        "roles": [
                            "SQL DB Contributor",
                            "SQL Security Manager"
                        ]
                    },
                    {
                        "scope": "workload:portal-environments/Development",
                        "roles": [
                            "API Management Service Contributor",
                            "Managed Identity Operator"
                        ]
                    },
                    {
                        "scope": "workload:platform-monitoring/Development",
                        "roles": [
                            "Monitoring Reader"
                        ]
                    }
                ]
            }
        },
        {
            "name": "Production",
            "subscription": "sub-xi-portal-prd",
            "connect_to_github": true,
            "locations": [
                "uksouth"
            ],
            "configure_for_terraform": true,
            "plan_additional_subscriptions": [
                "sub-platform-connectivity",
                "sub-platform-management"
            ],
            "requires_terraform_state_access": [
                "platform-monitoring",
                "portal-core",
                "portal-environments"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor"
                                ]
                            }
                        ],
                        "rbac_admin_roles": [
                            {
                                "allowed_roles": [
                                    "Storage Blob Data Owner"
                                ]
                            }
                        ]
                    }
                }
            ],
            "directory_roles": [
                "Cloud application administrator",
                "Groups Administrator"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Reader"
                        ]
                    },
                    {
                        "scope": "workload:portal-core/Production",
                        "roles": [
                            "SQL DB Contributor",
                            "SQL Security Manager"
                        ]
                    },
                    {
                        "scope": "workload:portal-environments/Production",
                        "roles": [
                            "API Management Service Contributor",
                            "Managed Identity Operator"
                        ]
                    },
                    {
                        "scope": "workload:platform-monitoring/Production",
                        "roles": [
                            "Monitoring Reader"
                        ]
                    }
                ]
            }
        }
    ]
}
