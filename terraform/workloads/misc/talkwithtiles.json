{
    "name": "talkwithtiles",
    "github": {
        "description": "Scrabble-style multiplayer word game delivered on Azure and deployed with Terraform plus Azure DevOps.",
        "topics": [
            "azure",
            "terraform",
            "azure-devops-pipelines",
            "game",
            "scrabble",
            "app-service",
            "sql-database",
            "app-insights",
            "key-vault"
        ],
        "add_sonarcloud_secrets": true,
        "visibility": "public"
    },
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-visualstudio-enterprise",
            "configure_for_terraform": true,
            "devops_project": "Molyneux.IO",
            "directory_roles": [
                "Cloud application administrator"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer",
                            "Storage Blob Data Contributor"
                        ]
                    }
                ]
            }
        },
        {
            "name": "Production",
            "subscription": "sub-talkwithtiles-prd",
            "configure_for_terraform": true,
            "devops_project": "Molyneux.IO",
            "directory_roles": [
                "Cloud application administrator"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer",
                            "Storage Blob Data Contributor"
                        ]
                    }
                ]
            }
        }
    ]
}
