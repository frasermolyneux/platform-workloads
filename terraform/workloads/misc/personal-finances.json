{
    "name": "personal-finances",
    "github": {
        "description": "Personal finance tracker and budgeting app deployed to Azure with Terraform and GitHub Actions.",
        "topics": [
            "azure",
            "terraform",
            "github-actions",
            "finance",
            "app-service",
            "app-insights",
            "key-vault"
        ],
        "add_sonarcloud_secrets": true,
        "visibility": "public"
    },
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-visualstudio-enterprise",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "directory_roles": [
                "Cloud application administrator"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer",
                            "Storage Blob Data Contributor"
                        ]
                    }
                ]
            }
        },
        {
            "name": "Production",
            "subscription": "sub-finances-prd",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "directory_roles": [
                "Cloud application administrator"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "roles": [
                            "Contributor",
                            "Key Vault Secrets Officer",
                            "Storage Blob Data Contributor"
                        ]
                    }
                ]
            }
        }
    ]
}
