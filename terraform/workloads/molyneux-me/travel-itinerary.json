{
    "name": "travel-itinerary",
    "github": {
        "description": "A simple ASP.NET Core app hosted on Azure for sharing travel itineraries with my travel companions",
        "topics": [
            "azure",
            "aspnet-core",
            "github-actions"
        ],
        "add_sonarcloud_secrets": true,
        "visibility": "public"
    },
    "environments": [
        {
            "name": "Development",
            "subscription": "sub-molyneux-me-dev",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "locations": [
                "uksouth"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor"
                                ]
                            }
                        ]
                    }
                }
            ],
            "directory_roles": [
                "Cloud application administrator",
                "Directory Readers"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "scope": "/subscriptions/db34f572-8b71-40d6-8f99-f29a27612144/resourceGroups/rg-platform-dns-prd-uksouth-01/providers/Microsoft.Network/dnszones/molyneux.me",
                        "roles": [
                            "DNS Zone Contributor"
                        ]
                    },
                    {
                        "scope": "sub:sub-visualstudio-enterprise",
                        "roles": [
                            "Reader"
                        ]
                    }
                ],
                "rbac_admin_roles": [
                    {
                        "allowed_roles": [
                            "Storage Blob Data Contributor",
                            "Storage Table Data Contributor"
                        ]
                    }
                ]
            }
        },
        {
            "name": "Production",
            "subscription": "sub-molyneux-me-prd",
            "connect_to_github": true,
            "configure_for_terraform": true,
            "locations": [
                "uksouth"
            ],
            "resource_groups": [
                {
                    "name": "rg-{workload}-{env}-{location}",
                    "role_assignments": {
                        "assigned_roles": [
                            {
                                "roles": [
                                    "Contributor"
                                ]
                            }
                        ]
                    }
                }
            ],
            "directory_roles": [
                "Cloud application administrator",
                "Directory Readers"
            ],
            "role_assignments": {
                "assigned_roles": [
                    {
                        "scope": "/subscriptions/db34f572-8b71-40d6-8f99-f29a27612144/resourceGroups/rg-platform-dns-prd-uksouth-01/providers/Microsoft.Network/dnszones/molyneux.me",
                        "roles": [
                            "DNS Zone Contributor"
                        ]
                    },
                    {
                        "scope": "sub:sub-visualstudio-enterprise",
                        "roles": [
                            "Reader"
                        ]
                    }
                ],
                "rbac_admin_roles": [
                    {
                        "allowed_roles": [
                            "Storage Blob Data Contributor",
                            "Storage Table Data Contributor"
                        ]
                    }
                ]
            }
        }
    ]
}